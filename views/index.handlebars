<div class="container">
    <div class="row">
        <div class="text-center col-sm-12">
            <h1 class="text-center">EAT DA BURGER!</h1>
            <p></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <br>
            <h2>BURGERS AVAILABLE!</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <button class="btn-primary devour" data-id="{{id}}" data-devoured="{{devoured}}">DEVOUR IT!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <br>
            <h2>BURGERS EATEN!</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="center col-sm-12">
            <hr>
            <h2>ADD A BURGER!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">BURGER NAME:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button class="btn-primary" type="submit">ADD</button>
            </form>
            
        </div>
    </div>
</div>